<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/faceblur"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2960"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1340"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="90"
                android:text="CARE GUIDE"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:fontFamily="@font/roboto_black"
                android:textColor="#FFFFFF"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="190"
                android:letterSpacing="0.1"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="GETTING YOUR SKIN CONDITION DATA."
                android:textAlignment="center"
                android:textColor="#000000" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2960"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/treatup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="460"
            tools:ignore="Orientation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1970"/>

        <LinearLayout
            android:id="@+id/treatdown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="570"
            tools:ignore="Orientation" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>